@using HandmadeCity.ViewModels.Cart
@model HandmadeCity.ViewModels.Cart.CartListViewModel
@{
    ViewData["Title"] = "Корзина";
}

<div class="container">
    <br /> <br /> <br />

    @if (Model.Products.Count == 0)
    {
        <h3 class="text-center">Ваша корзина пуста!</h3>
    }
    else
    {
        <div class="row">
            @foreach (var product in Model.Products) {

                <div class="col-md-4" >
                    @Html.Partial("PartialViews/_ProductCard", product)
                </div>
            }
        </div>
        <br />
        <br />
        <br />
        <br />
        <br />
        <div class="row" >
            <a asp-controller="Purchase" asp-action="Purchase" class="btn btn-primary" ><i class="fa fa-shopping-cart" ></i>Совершить Покупку</a>
        </div>
    }
</div>



        