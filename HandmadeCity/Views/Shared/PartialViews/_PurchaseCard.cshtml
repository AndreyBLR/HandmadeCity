@model HandmadeCity.ViewModels.Purchases.PurchaseViewModel
    
<div class="panel-group" >
    <div class="panel panel-default">
        <div class="panel-heading" >
            <h4 class="panel-title">
                <a data-toggle="collapse" href="#@Model.Id">@Model.DateTime</a>
            </h4>
        </div>
        <div id="@Model.Id" class="panel-collapse collapse">
            <div class="panel-body" >
                <div class="panel-group" id="accordion">
                    @foreach (var prod in @Model.ProductsList) {
                        <div class="panel panel-default" >
                            <div class="panel-heading" >
                                <h4 class="panel-title" >
                                    <a data-toggle="collapse" data-parent="#accordion" href="#@prod.Id" >@prod.Name</a>
                                </h4>
                            </div>
                            <div id="@prod.Id" class="panel-collapse collapse" >
                                <div class="panel-body" >@prod.Description</div>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <div class="panel-footer" >
                @Model.TotalCost
            </div>
        </div>
    </div>
</div>