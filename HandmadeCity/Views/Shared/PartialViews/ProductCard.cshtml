@model HandmadeCity.Data.Entities.Product


<div class="col-md-4">
    <div class="thumbnail">
        <img src="~/images/no_image.jpg" alt="" class="img-responsive">
        <div class="caption">
            <h4 class="pull-right"></h4>
            <h4><a href="#">@Model.Name</a></h4>
            <p>@Model.Description</p>
        </div>
        <div class="ratings">
            <p>
                <span class="glyphicon glyphicon-star"></span>
                <span class="glyphicon glyphicon-star"></span>
                <span class="glyphicon glyphicon-star"></span>
                <span class="glyphicon glyphicon-star"></span>
                <span class="glyphicon glyphicon-star"></span>
                (@Model.Reviews.Count)
            </p>
        </div>
        <div class="space-ten"></div>
        <div class="btn-ground text-center">
            <button type="button" class="btn btn-primary"><i class="fa fa-shopping-cart"></i>Add To Cart</button>
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#product_view"><i class="fa fa-search"></i>Add To Bookmark</button>
        </div>
        <div class="space-ten"></div>
    </div>
</div>
