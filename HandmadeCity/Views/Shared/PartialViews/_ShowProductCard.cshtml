@using HandmadeCity.ViewModels.Products
@model HandmadeCity.ViewModels.Products.ProductViewModel

<div class="thumbnail" >
    <img src="@Model.PictureUrl" alt="" class="img-responsive" style="height: 200px" >
    <div class="caption">
        <h4 class="pull-right"></h4>
        <h4><a href="#">@Model.Name</a></h4>
    </div>
    <div class="ratings">
        <p>
            @for (int i = 0; i < Model.TotalRating; i++)
            {
                <span class="glyphicon glyphicon-star"></span>
            } 
            @for (int i = 0; i < 5 - Model.TotalRating; i++)
            {
                <span class="glyphicon glyphicon-star-empty"></span>
            } (@Model.ReviewAmout)
        </p>
    </div>
    <div class="space-ten"></div>
    <div class="btn-ground text-center">
        <button type="button" class="btn btn-primary"><i class="fa fa-shopping-cart"></i>Add To Cart</button>
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#product_view"><i class="fa fa-search"></i>Add To Bookmark</button>
    </div>
    <div class="space-ten"></div>
</div>

